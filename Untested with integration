if __name__ == "__main__":
    print("Initializing Conscious AI with Friendship System...")
    ai = ConsciousAI()
    
    # Create sample camera
    ai.sensors.add_sensor(CameraSensor("Front Camera"))
    
    # Start terminal
    terminal = AITerminal(ai)
    terminal.start()
